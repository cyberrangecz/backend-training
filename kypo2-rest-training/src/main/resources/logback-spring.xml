            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{5} - %msg%n</pattern>-->
        <!--</encoder>-->
    <!--</appender>-->

    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>localhost</syslogHost>
        <port>514</port>
        <facility>LOCAL1</facility>
        <suffixPattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{5} - %msg%n</suffixPattern>
        <!-- include %exception in message instead of allowing default multiline stack trace -->
        <throwableExcluded>true</throwableExcluded>
    </appender>



    <logger name="cz.muni.ics.kypo" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <!--<appender-ref ref="FILE" />-->
        <appender-ref ref="SYSLOG" />
    </logger>

    <logger name="org.springframework.boot" level="ERROR" additivity="false">
        <!--<appender-ref ref="FILE" />-->
        <appender-ref ref="SYSLOG" />
    </logger>

</configuration>



